/*------------------- UNIT CONVERTER SCREEN ----------*/

/* Header for unit converter */ 
#unit-converter-title {
    text-align: center;
    margin-top: 2;
    margin-bottom: 2;
    text-style: bold;
    color: white;
}
/* Quantity selection widget styling */
#quantity-selection {
    padding: 2;
}

/* Input box for scalar input styling */
#unit-converter-input1 {
    padding: 2;
}

/* Unit selection styling */
#unit-converter-unit1-selection {
    padding: 2;
}

#unit-converter-unit2-selection {
    padding: 2;
}

